<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.0">
    <persistence-unit name="jbrewPU" transaction-type="JTA">
        <jta-data-source>jdbc/jbrewDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <property name="javax.persistence.sql-load-script-source" value="META-INF/initial-data.sql"/>
            <property name="jakarta.persistence.sql-load-script-source"  value="META-INF/initial-data.sql"/>

            <property name="eclipselink.ddl-generation.output-mode" value="database"/>

            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.logging.level" value="FINE"/>

            <property name="eclipselink.cache.shared.default" value="false"/>

            <property name="eclipselink.target-server" value="Liberty"/>

        </properties>
    </persistence-unit>
</persistence>